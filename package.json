{
  "name": "ulit",
  "version": "0.0.2",
  "description": "minimalist tagged template literal library",
  "main": "dist/ulit.js",
  "jsnext:main": "src/index.js",
  "module": "src/index.js",
  "directories": {
    "src": "src",
    "test": "test"
  },
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "test": "nyc ava",
    "test:html": "nyc report --reporter=html",
    "codacy": "nyc report --reporter=lcov && cat ./coverage/lcov.info | codacy-coverage",
    "build": "tsc src/index.ts",
    "minify": "echo 'ADD: minify'",
    "prepare": "npm run build && npm run test",
    "prepublish": "npm run minify",
    "docs": "typedoc --out ./docs/ --mode file ./src/index.ts",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "lint:fix": "eslint --fix --ext .js src/",
    "format": "prettier --write 'src/**/*.ts'",
    "release": "npm run test && git commit -am $npm_package_version && git tag $npm_package_version && git push && git push --tags && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andyrj/ulit.git"
  },
  "author": "Andy Johnson",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/andyrj/ulit/issues"
  },
  "homepage": "https://github.com/andyrj/ulit#readme",
  "dependencies": {},
  "devDependencies": {
    "atob": "^2.0.3",
    "ava": "^0.24.0",
    "btoa": "^1.1.2",
    "codacy-coverage": "^2.0.3",
    "jsdom": "^11.5.1",
    "nyc": "^11.3.0",
    "prettier": "^1.9.2",
    "tslint": "^5.8.0",
    "tslint-config-prettier": "^1.6.0",
    "typedoc": "^0.9.0"
  },
  "peerDependencies": {}
}
