{
	"compilerOptions": {
    "outDir": "./dist",
    "target": "es2015",
    "module": "es2015",
    "sourceMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "alwaysStrict": true,
    "noFallthroughCasesInSwitch": true,
    "inlineSources": true
	},
	"include": [
        "src/ulit.ts"
	],
	"exclude": [
		"test/**/*.ts"
	]
}