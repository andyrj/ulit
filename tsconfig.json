{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2015",
    "lib": ["es2017", "dom.iterable", "dom"],
    "outDir": "./dist/",
    "declaration": true,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "alwaysStrict": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "inlineSources": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": []
}