{
	"compilerOptions": {
		"outDir": "./dist/",
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "experimentalDecorators": true,
		"lib": [ "dom", "dom.iterable", "es6", "es2017", "es5"],
    "declaration": true,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "alwaysStrict": true,
    "noFallthroughCasesInSwitch": true,
    "inlineSources": true
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"test/**/*.ts"
	]
}